<% if @ballots_ready %>
    <% if current_user.has_submitted_final_ballot? %>
        <p>Your ballot has been submitted. Thanks again!</p>
    <% else %>

        <%= form_for :ballot, {url: ballots_path, html: {}} do |f| %>

            <div class="clear">
                <% @awards.each do |award| %>
                    <div class="finalBallotSection">
                        <h2 class="finalBallotSection__award">
                            <%= award.award_name %>
                        </h2>

                        <% award.ballot_items.each do |ballot_item| %>
                            <label class="finalBallotSection__label">
                                <%= f.radio_button award.id, ballot_item.id %>
                                <%= ballot_item_info(ballot_item) %>
                            </label>
                        <% end %>
                    </div>
                <% end %>
            </div>

            <%= f.submit %>
        <% end %>

    <% end %>
<% else %>
    <p>Final Ballots are not yet available. Please check back after you've received notification that nominations have been tallied.</p>
<% end %>