<link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">

<% if session[:nominations_closed] == false %>
<div class="nomination_ballot_container">
  <header> 
    <div class="clear">
      <div class="col-12">
        <div class="headline">
          <h1 class="nominations_title">TAG Award Nominations <%= Time.now.strftime("%Y") %></h1>
        </div>
      </div>
    </div>
  </header>
  <div class="container">
    <ul class="award_links" id="sticky_award_links">
      <div class="award_links_heading">
        Award Categories
      </div>
      <div class="award_links_instructions">
        Click on any Award Category on this list to get the nomination ballot for that category. No searching needed. Let the right section come to you. 
      </div>
      <% @awards.each do |award| %>
        <li><a class="award_link" href="#<%= award.label%>"><%= award.award_name%></a></li>
      <% end %>
    </ul>
    <div class="nominations_form">
      <div id="award_explanations">
        <a href="/files/AwardExplanations.pdf" target="_blank">Click Here for an Explanation of Award Categories</a><br>
        <a href="/files/SpecialAwards.pdf" target="_blank">Click Here for Info about TAG Special Awards</a><br>
        <a href="/files/VotingResource.xlsx" target="_blank">Click Here for a helpful voting resource</a><br>
      </div>

        <%= form_for :user, url: {action: "save_nominees"} do |u| %>
          <% @awards.each do |award| %>
            <div class="award_category_title"><%= award.award_name %></div>
            <% nomination_counter = 1 %>
            <% while nomination_counter <= 5 %>
              <% is_selected = false %>
              <%= u.fields_for award.award_name do |n| %>
                <%= n.collection_select(nomination_counter, PotentialNomination.where(award_id: award.id), :id, :display_name, {:selected => false, :include_blank => true}, {:class => 'nom_box'}) %><br>
              <% end %>
              <% nomination_counter += 1 %>
            <% end %>
          <% end %>
          <%= u.submit "Submit Your Nominations" %>
        <% end %>
      
<% else %>
  <H1>We're sorry! Nominations are now closed for the <%= Time.now.strftime("%Y") %> TAG Awards!</H1>
  <h2>Thank you to everyone who voted. Ballots for final voting will be available soon!</h2>
<% end %>