<%= form_for :ballot, url: build_ballot_admin_nomination_path(award_id) do |f| %>
  <table class="collection-data" aria-labelledby="page-title">
    <thead>
      <tr>
        <th class="cell-label">&nbsp;</th>
        <th class="cell-label" scope="col">Rank</th>
        <th class="cell-label" scope="col">Nominee</th>
        <th class="cell-label" scope="col">Weighted</th>
        <th class="cell-label" scope="col">Raw</th>
      </tr>
    </thead>

    <tbody>
      <% Nomination.top_ten(award_id, limit).each_with_index do |nomination, i| %>
        <tr class="table__row" tabindex="0">
          <td>
            <%= f.check_box :finalists, {name: "ballot[finalists][#{i}][info]"}, "#{nomination.potential_nomination_id}", nil %>
          </td>
          <td><%= i + 1 %></td>
          <td><%= PotentialNomination.find(nomination.potential_nomination_id).display_name %>
          <td><%= nomination.weighted_count %></td>
          <td><%= nomination.raw_count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="form-actions--no_shift">
    <%= f.submit "Set Final Ballot", data: {confirm: "Confirm final ballot items for this award?\n\nThis award's section in the final ballot cannot be changed once you submit, so please make sure you want to proceed."} %>
  </div>
<% end %>