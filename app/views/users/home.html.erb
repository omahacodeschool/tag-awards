<html>
<head>
    <title>User Dashboard</title>
</head>
<body>
  <div class="clear title">
    <div class="col-12 title-box">
      <h2>Show Attendance 2016</h2>
    </div>
  </div>

  <div class="clear content">
    <div class="col-12 content-box">

      <%= form_for current_user, url: user_viewings_path do |f| %>
        <% @theaters.each_with_index do |t, count| %>
          <br><button class="toggle_button" id="toggle_btn_<%= count %>" type="button">+</button><strong><%= t.name %></strong>
          <div class="theater_shows" id="theater_shows_<%= count%>">
            <%= @plays.each do |p| %>
              <% if p.theater.name == t.name %>
                <p>
                  <label>
                    <%= f.check_box :viewings, {name: "user[viewings][]", id: nil, checked: current_user.has_viewed?(p)}, p.id, nil %>
                    <%= p.title %>
                  </label>
                </p>
              <% end %>
            <% end %>
          </div>


        <% end %>

        <div class="submit-button"> 
          <p>
            <%= f.submit "SUBMIT", class: "form-submit-button" %>
          </p>
        </div>
      <% end %>

    </div>
  </div>

</body>
</html>